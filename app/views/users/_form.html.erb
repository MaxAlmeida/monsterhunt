<div class="row justify-content-center">   
  <%= form_with(model: user, local: true, class: 'form-container') do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <% if action_name == 'new' %>
      <h1>Crie sua Conta</h1>
    <% elsif action_name == 'edit' %>
      <h1>Edite sua conta</h1>
    <% end %>  

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: :user_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: "form-control" %>
    </div>
      <%= form.submit class: "btn btn-info btn-block" %>
  <% end %>
</div>
